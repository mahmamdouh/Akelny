{
  "name": "akelny-backend",
  "version": "1.0.0",
  "description": "Akelny backend API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "lint": "eslint . --ext .ts",
    "migrate": "npm run migrate:up",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "seed": "ts-node src/seeds/index.ts",
    "db:reset": "npm run migrate:down && npm run migrate:up && npm run seed",
    "test:db-connection": "ts-node -e \"import('./src/config/database').then(db => db.testConnection().then(r => process.exit(r ? 0 : 1)))\"",
    "test:redis-connection": "ts-node -e \"import('./src/config/redis').then(r => r.connectRedis().then(c => process.exit(c ? 0 : 1)))\"",
    "production:setup": "chmod +x scripts/production-setup.sh && ./scripts/production-setup.sh",
    "production:start": "NODE_ENV=production node dist/index.js",
    "logs:tail": "tail -f logs/$(date +%Y-%m-%d).log",
    "logs:error": "grep -i error logs/$(date +%Y-%m-%d).log",
    "health": "curl -s http://localhost:3000/health | jq",
    "metrics": "curl -s http://localhost:3000/metrics"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "node-pg-migrate": "^6.2.2",
    "prettier": "^3.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ]
  }
}